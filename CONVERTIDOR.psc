	PESOS_MEX=M/0.047;
	ESCRIBIR "EL EQUIVALENTE EN PESOS MEXICANOS ES:  ",PESOS_MEX;
	
	ESCRIBIR "CONVETIR FRACOS FRANCESES A Renminbi";
	ESCRIBIR "INGRESE LA CANTIDAD EN FRANCOS FRANCESES";
	LEER M;
	RENMINBI=M/8.88;
	ESCRIBIR "EL EQUIVALENTE EN FRANCOS FRANCESES ES:  ",RENMINBI;
	
	ESCRIBIR "CONVERTIR DOLAR NORTEAMERICANOS A MARCOS ALEMANES ";
