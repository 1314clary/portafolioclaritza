	LEER M;
	MARCOS_ALEM=M/0.483;
	ESCRIBIR "EL EQUIVALENTE EN DOLAR NORTEAMERICANOSES ES:  ",MARCOS_ALEM;
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
